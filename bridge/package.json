{
  "name": "adzsend-bridge",
  "version": "1.0.0",
  "description": "Adzsend Bridge - Desktop application for sending Discord messages",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "Adzsend",
  "homepage": "https://adzsend.com",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.adzsend.bridge",
    "productName": "Adzsend Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "renderer/**/*",
      "assets/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "userRed4cted",
      "repo": "Adzsend"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/favicon.ico",
      "artifactName": "AdzsendBridgeSetup-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "shortcutName": "Adzsend Bridge",
      "deleteAppDataOnUninstall": true,
      "include": "installer.nsh",
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "icon": "assets/favicon.icns",
      "artifactName": "AdzsendBridge.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/favicon.png",
      "artifactName": "AdzsendBridge.${ext}",
      "maintainer": "Adzsend"
    }
  }
}
